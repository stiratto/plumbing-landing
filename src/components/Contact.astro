---
import { Phone, Mail, MapPin } from "@lucide/astro";
import { QuoteForm } from "@/components/Form";

import {
  FormField,
  FormItem,
  Form,
  FormControl,
  FormMessage,
  FormLabel,
  FormDescription,
} from "@/components/ui/form";
---

<section id="contact" class="py-20 bg-darkgreen text-lightgreen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-start mb-16">
      <h2 class="text-[clamp(34px,5vw,128px)] font-display font-bold mb-4">
        Get Your Free <span class="text-darkgreen bg-lightgreen">Quote</span> Today
      </h2>
      <p class="text-xl font-medium">
        Ready to solve your plumbing problems? Contact us for a free,
        no-obligation quote.
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2 bg-lightgreen p-8 rounded-xl shadow-lg">
        <QuoteForm client:visible />
      </div>

      <div class="space-y-8">
        <div class="bg-white p-6 rounded-xl shadow-lg">
          <h3 class="text-xl font-display font-bold text-gray-900 mb-4">
            Contact Information
          </h3>
          <div class="space-y-4">
            <div class="flex items-center space-x-3">
              <Phone class="w-5 h-5 text-blue-600" />
              <span class="text-gray-600">(555) 123-PIPE</span>
            </div>
            <div class="flex items-center space-x-3">
              <Mail class="w-5 h-5 text-blue-600" />
              <span class="text-gray-600">info@aquaproplumbing.com</span>
            </div>
            <div class="flex items-center space-x-3">
              <MapPin class="w-5 h-5 text-blue-600" />
              <span class="text-gray-600">123 Main St, Your City, ST 12345</span
              >
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-lg">
          <h3 class="text-xl font-display font-bold text-gray-900 mb-4">
            Business Hours
          </h3>
          <div class="space-y-2 text-gray-600">
            <div class="flex justify-between">
              <span>Monday - Friday</span>
              <span>7:00 AM - 6:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Saturday</span>
              <span>8:00 AM - 4:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Sunday</span>
              <span>Emergency Only</span>
            </div>
            <div class="mt-4 p-3 bg-orange-50 rounded-lg">
              <div class="font-display font-semibold text-orange-800">
                Emergency Service
              </div>
              <div class="text-orange-600 font-medium">Available 24/7</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
